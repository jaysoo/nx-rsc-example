{
  "name": "app",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "./app/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/vite:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/app"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "test": {
      "executor": "@nrwl/vite:test",
      "outputs": [
        "coverage/app"
      ],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../coverage/app"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "./app/**/*.{ts,tsx,js,jsx}"
        ]
      }
    }
  },
  "tags": []
}
