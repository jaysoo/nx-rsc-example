{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "jsx": "react-jsx",
    "noEmit": true,
    "strict": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      "@acme/esbuild-plugin": [
        "esbuild-plugin/src/index.ts"
      ]
    }
  },
  "references": [
    {
      "path": "./tsconfig.app.json"
    }
  ],
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
