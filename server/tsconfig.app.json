    "outDir": "../dist/out-tsc",
    "module": "esnext",
    "moduleResolution": "node",
    "types": [
      "node"
    ]
  },
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
